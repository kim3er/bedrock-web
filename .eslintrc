{
	"root": true,
	"env": {
		"es2021": true,
		"node": true
	},
	"extends": [
		"eslint:recommended"
	],
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"rules": {
		"indent": [
			"warn",
			2,
			{
				"SwitchCase": 1
			}
		],
		"linebreak-style": [
			"error",
			"windows"
		],
		"quotes": [
			"error",
			"single",
			{
				"allowTemplateLiterals": true
			}
		],
		"semi": [
			"error",
			"always"
		],
		"brace-style": [
			"warn",
			"stroustrup"
		],
		"no-mixed-spaces-and-tabs": "error",
		"no-multi-spaces": "error",
		"no-throw-literal": "error",
		"no-this-before-super": "error",
		"no-var": "error",
		"no-unused-vars": "warn",
		"no-tabs": "error",
		"key-spacing": "error",
		"object-curly-spacing": [
			"error",
			"always"
		],
		"space-before-function-paren": [
			"warn",
			{
				"named": "never",
				"anonymous": "never",
				"asyncArrow": "always"
			}
		],
		"no-inner-declarations": "off"
	}
}
